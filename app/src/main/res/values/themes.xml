<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SixtCars" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_500</item>
        <item name="colorPrimaryVariant">@color/orange_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_grey_200</item>
        <item name="colorSecondaryVariant">@color/blue_grey_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Corner16Radius" parent="">
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="SplashStyle" parent="Theme.SixtCars">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="Cairo">
        <item name="fontFamily">@font/cairo</item>
    </style>

    <style name="CairoSemiBold">
        <item name="fontFamily">@font/cairo_semibold</item>
    </style>

    <style name="CairoBold">
        <item name="fontFamily">@font/cairo_bold</item>
    </style>

    <style name="Cairo.16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Cairo.16.BlueGray">
        <item name="android:textColor">@color/blue_grey_700</item>
    </style>

    <style name="CairoSemiBold.16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CairoSemiBold.16.BlueGray">
        <item name="android:textColor">@color/blue_grey_700</item>
    </style>

    <style name="CairoBold.16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CairoBold.16.BlueGray">
        <item name="android:textColor">@color/blue_grey_700</item>
    </style>

</resources>